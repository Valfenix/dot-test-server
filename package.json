{
  "name": "dot-test",
  "version": "1.0.0",
  "description": "A Dot Typescript Nodejs Test",
  "main": "build/server.ts",
  "scripts": {
    "start": "set NODE_ENV=staging && node -r ./tsconfig-paths.js build/server.js",
    "tsc": "tsc",
    "postinstall": "npm run tsc && npm run copy-files && npm run copy-greeting",
    "watch-node": "nodemon build/server.js",
    "watch-ts": "tsc -w",
    "dev": "set NODE_ENV=dev TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true && nodemon source/server.ts",
    "deploy": "git add . && git commit -m Heroku && git push heroku master",
    "clean": "rm -rf ./build"
  },
  "author": "Valentine Offiah",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "mongoose": "^6.2.8",
    "socket.io": "^4.4.1",
    "typescript": "^4.6.3",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}